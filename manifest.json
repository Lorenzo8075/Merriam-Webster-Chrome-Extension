{
    "manifest_version": 3,
    "name": "Merriam Webster Vocab Search",
    "description": "Search Vocab Words On Merriam Webster With 2 clicks",
    "version": "1.2",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "Merriam Webster Vocab Search",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["contextMenus", "search", "tabs", "tts"]
}